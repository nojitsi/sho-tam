{
  "include": ["remix.env.d.ts", "**/*.ts", "**/*.tsx"],
  "compilerOptions": {
    "baseUrl": "./",
    "lib": ["DOM", "DOM.Iterable", "ES2019", "esnext"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "resolveJsonModule": true,

    "target": "ES2019",
    "strict": true,

    "noEmit": true,
    "allowJs": true,

    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "paths": {
      "~/*": ["./app/*"]
    }
  }
}
